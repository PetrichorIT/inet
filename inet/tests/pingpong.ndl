link LANLink {
    jitter: 0.0,
    latency: 0.05,
    bitrate: 10000000,
}

module Ping {
    gates {
        port
    }
}

module Pong {
    gates {
        port
    }
}

module Main {
    submodules {
        ping: Ping,
        pong: Pong,
    }

    connections {
        ping/port <-- LANLink --> pong/port,
    }
}

entry Main;