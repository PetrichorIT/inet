module Alice {
    gates { port }
}

module Bob {
    gates { port }
}

module Router {
    gates { port }
}

module Switch {
    gates {
        port[3]
    }
}

link LAN {
    bitrate: 10000000,
    latency: 0.001,
    jitter: 0.0
}

module Main {
    submodules {
        alice: Alice,
        bob: Bob,
        router: Router,
        switch: Switch,
    }

    connections {
        alice/port <-- LAN --> switch/port[0],
        bob/port <-- LAN --> switch/port[1],
        router/port <-- LAN --> switch/port[2],
    }
}

entry Main;