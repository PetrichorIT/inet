link LAN {
    jitter: 0.0,
    latency: 0.05,
    bitrate: 100000000,
}

module A {
    gates {
          port,
    }
}
module B {
    gates {
        port,
    }
}
module C {
    gates {
         port,
    }
}

module Main {
    gates {
        port[3]
    }

    submodules {
        a: A,
        b: B,
        c: C,
    }

    connections {
        a/port <-- LAN --> port[0],
        b/port <-- LAN --> port[1],
        c/port <-- LAN --> port[2],
    }
}

entry Main;