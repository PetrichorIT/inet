module Server {
    gates:
        in @input
        out @output
}

module Client {
    gates:
        in @input
        out @output
}

link LANLink {
    bitrate: 10000000
    jitter: 0.0
    latency: 0.05
}

subsystem Main {
    nodes:
        server: Server
        client: Client

    connections:
        server/out --> LANLink --> client/in
        client/out --> LANLink --> server/in
}